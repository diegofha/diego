#include "stdafx.h"

int potencia(int x,int y)
  {int p=1;
    int i=1;
    while (i<=y){
	p=p*x;
	i=i+1;
				 }
      return p;
  }
	int factorial(int n)
	{int s,i,r; 
	i=1;
	r=1;
	while(i<=n)
	{r=i*r;
	 i=i+1;
	}
	return r;
	}

int main()
{int n,b,i,e,x,r;
printf("introdusca n : \n");
scanf("%i",&n);
i=1;
e=1;
b=2;
while(i<=n)
{
	r=factorial(b);
	x= potencia(r,e);
	printf("%i \n",x);
	e=e+2;
	b=b+2;
	i=i+1;
}	
	return 0;

}
